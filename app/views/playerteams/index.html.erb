<h1>Listing playerteams</h1>

<table>
  <tr>
    <th>Team</th>
    <th>Player</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @playerteams.each do |playerteam| %>
  <tr>
    <td><%= playerteam.team_id %></td>
    <td><%= playerteam.player_id %></td>
    <td><%= link_to 'Show', playerteam %></td>
    <td><%= link_to 'Edit', edit_playerteam_path(playerteam) %></td>
    <td><%= link_to 'Destroy', playerteam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

